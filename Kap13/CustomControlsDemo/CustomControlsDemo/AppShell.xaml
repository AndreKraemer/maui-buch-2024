<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CustomControlsDemo.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CustomControlsDemo"
    xmlns:views="clr-namespace:CustomControlsDemo.Views"
    Title="CustomControlsDemo"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />


    <ShellContent
        Title="Composite Control Demo"
        ContentTemplate="{DataTemplate views:CompositeControlDemoPage}"
        Route="CompositeControlDemoPage" />


    <ShellContent
        Title="Control Templates Demo"
        ContentTemplate="{DataTemplate views:ControlTemplatesDemoPage}"
        Route="ControlTemplatesDemoPage" />


    <ShellContent
        Title="Mapper Demo"
        ContentTemplate="{DataTemplate views:MapperDemoPage}"
        Route="MapperDemo" />

    <ShellContent
        Title="Drawn Controls Demo"
        ContentTemplate="{DataTemplate views:DrawnControlsDemoPage}"
        Route="DrawnControlsDemo" />

</Shell>
