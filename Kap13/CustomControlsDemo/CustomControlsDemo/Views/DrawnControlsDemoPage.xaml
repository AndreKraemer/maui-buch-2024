<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CustomControlsDemo.Views.DrawnControlsDemoPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:CustomControlsDemo.Controls"
    Title="Drawn Controls">
    <Grid
        Padding="32"
        RowDefinitions="250, auto, auto"
        RowSpacing="24">
        <controls:CircularProgressBar
            x:Name="circularProgressBar"
            Grid.Row="0"
            Progress="0"
            ProgressColor="CornflowerBlue" />
        <Button
            Grid.Row="1"
            Clicked="OnProgressPlusClicked"
            Text="Progress: + 10" />
        <Button
            Grid.Row="2"
            Clicked="OnProgressMinusClicked"
            Text="Progress: - 10" />

    </Grid>
</ContentPage>