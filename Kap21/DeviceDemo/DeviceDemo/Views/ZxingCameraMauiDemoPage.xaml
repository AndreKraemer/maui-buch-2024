<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DeviceDemo.Views.ZxingCameraMauiDemoPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
    Title="ZxingCameraMauiDemoPage">
    <VerticalStackLayout Spacing="8">
        <cv:CameraView
            x:Name="cameraView"
            HeightRequest="300"
            WidthRequest="300" />
        <Button Text="Scan starten" Clicked="ScanButton_Clicked" />
        <Label
            x:Name="ResultLabel"
            FontSize="24"
            HorizontalTextAlignment="Center"
            Text="Suche Barcode ..." />
    </VerticalStackLayout>
</ContentPage>