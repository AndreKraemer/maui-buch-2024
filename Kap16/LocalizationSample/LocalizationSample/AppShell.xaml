<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LocalizationSample.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LocalizationSample"
    xmlns:views="clr-namespace:LocalizationSample.Views"
    Title="LocalizationSample"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />


    <ShellContent
        Title="Lokalisierungsdemo"
        ContentTemplate="{DataTemplate views:LocalizationDemoPage}"
        Route="LocalizationDemoPage" />

</Shell>
